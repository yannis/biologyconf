              %span.logos-log-title
                Société Botanique Suisse
                iGE3
        .col-md-12
          .col-md-4.col-sm-4.col-xs-5
            = link_to 'http://ige3.unige.ch', id: "logos-sponsors-ige3", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
          .col-md-3.col-sm-3.col-xs-6
            = link_to 'http://www.fasteris.com/', id: "logos-sponsors-fasteris", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
                Fasteris
          .col-md-3.col-sm-3.col-xs-6
            = link_to 'http://www.biolabo.com/', id: "logos-sponsors-biolabo", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
                Biolabo

!!! 5
- html_tag :class => 'no-js' do
  = render 'head'

  %body{ :class => "#{ controller.controller_name }" }
    #wrap
      = render 'chromeframe'
      %nav.navbar.navbar-default.navbar-static-top{role: "navigation"}
        .navbar-header
          %button.navbar-toggle{type: "button", data: {toggle: "collapse", target: ".navbar-ex1-collapse"}}
            .span.sr-only Toggle navigation
            .span.icon-bar
            .span.icon-bar
            .span.icon-bar
          = link_to "biology14", root_path, class: "navbar-brand"
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li
              = link_to "Program", "#program", data:{target: '#program'}
            %li
              = link_to "Venue", "#venue", data:{target: '#venue'}
            %li
              = link_to "Contact & more", "#contact", data:{target: '#contact'}
            %li
              = link_to "Pace14", "#pace14", data:{target: '#pace14'}

      .container

        = render 'flashes'

        = yield

    %footer#footer
      .container
        %p
          If you have any questions, do not hesitate to post them to biology14@unige.ch.
        %p
          Please spread the word about this conference to your colleagues!


    = render 'javascripts'

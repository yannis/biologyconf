- cache "application-footer" do
  %footer#footer
    .container#logos
      .row#logos-organizers
        %h3.col-md-12 Conference organized by
        .col-md-12
          .col-md-3.col-sm-3.col-xs-6
            = link_to "http://unige.ch", id: "logos-organizers-unige", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
                University of Geneva
          .col-md-3.col-sm-3.col-xs-6
            = link_to "http://www.ville-ge.ch/", id: "logos-organizers-geneve", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
                Ville de Genève
          .col-md-3.col-sm-3.col-xs-6
            = link_to "http://www.ville-ge.ch/mhng/", id: "logos-organizers-museum", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
                Muséum d'histoire naturelle de la Ville de Genève
          .col-md-3.col-sm-3.col-xs-6
            = link_to "http://www.ville-ge.ch/cjb/", id: "logos-organizers-jardinbot", target: '_blank', class: "logos-logo" do
              %span.logos-log-title
                Conservatoire et Jardin botaniques de la Ville de Genève
      .row#logos-sponsors
        %h3.col-md-12 Supported by
        .col-md-12
          .col-md-3.col-sm-3.col-xs-6
            = link_to 'http://ssz.scnatweb.ch/', id: "logos-sponsors-szs", target: '_blank', class: "logos-logo" do
